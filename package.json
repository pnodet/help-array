{
	"name": "help-array",
	"version": "2.0.0",
	"description": "TS package to help dealing with array",
	"main": "dist/index.js",
	"module": "./dist/index.mjs",
	"typings": "dist/index.d.ts",
	"scripts": {
		"clean": "rimraf dist/",
		"build": "npm run clean && npm run build:src",
		"build:src": "tsup src/index.ts",
		"lint": "xo",
		"lint:fix": "xo --fix",
		"test": "ava"
	},
	"engines": {
		"node": ">=14.16"
	},
	"exports": {
		".": {
			"import": "./dist/index.mjs",
			"require": "./dist/index.js",
			"types": "./dist/index.d.ts"
		}
	},
	"files": [
		"dist",
		"LICENSE",
		"README.md"
	],
	"author": {
		"name": "pnxdxt",
		"email": "pnxdxt@gmail.com",
		"url": "https://pnxdxt.com"
	},
	"license": "MIT",
	"repository": "https://github.com/pnxdxt/help-array",
	"homepage": "https://github.com/pnxdxt/help-array#readme",
	"bugs": {
		"url": "https://github.com/pnxdxt/help-array/issues"
	},
	"devDependencies": {
		"@ava/typescript": "^3.0.1",
		"@tsconfig/node14": "^1.0.3",
		"ava": "^4.3.0",
		"rimraf": "^3.0.2",
		"ts-node": "^10.8.2",
		"tsup": "^6.1.3",
		"typescript": "^4.7.4",
		"xo": "^0.44.0"
	},
	"xo": {
		"prettier": true
	},
	"prettier": {
		"trailingComma": "es5",
		"singleQuote": true,
		"bracketSpacing": false
	},
	"tsup": {
		"splitting": false,
		"sourcemap": true,
		"clean": true,
		"dts": true,
		"target": "es2020",
		"format": [
			"esm",
			"cjs"
		]
	},
	"ava": {
		"extensions": [
			"ts"
		],
		"require": [
			"ts-node/register"
		]
	},
	"keywords": [
		"helper",
		"small",
		"typescript",
		"javascript",
		"array"
	]
}
